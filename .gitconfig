[core]
    pager = cat
    excludesfile = ~/.gitignore
[commit]
    gpgsign = true
[status]
    submoduleSummary = true
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
    bra = branch --all
    cl = clone --recursive
    dif = diff --no-prefix --relative # not-staged
    difs = diff --no-prefix --relative --staged # staged
    difa = status -vv # staged and not-staged
    dt = difftool --no-prompt
    lg = log --reverse --date=iso --pretty=tformat:'%Cred%h%Creset | %Cgreen%ad %C(blue)%an%Creset%C(yellow)%d%Creset | %s'
    lgs = log --date=iso --pretty=tformat:'%Cred%h%Creset | %Cgreen%ad %C(blue)%an <%ae>%Creset%C(yellow)%d%Creset | %s' --graph
    sh = show --date=iso --pretty=tformat:'%Cred%h%Creset | %Cgreen%ad %C(blue)%an <%ae>%Creset%C(yellow)%d%Creset | %s'
    tags = !git for-each-ref --format='%(if)%(committerdate)%(then)%(committerdate:iso)  %(refname:lstrip=2) %(else)%(*committerdate:iso)  %(refname:lstrip=2) %09  %(taggeremail) %(subject)%(end)' refs/tags | sort
[diff]
    tool = meld
[color]
    status = auto
    branch = auto
    diff = auto
    ui = auto
[color "grep"]
    match = cyan bold
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = bold
    frag = bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
